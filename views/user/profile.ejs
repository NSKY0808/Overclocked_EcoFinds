<%- include("../includes/navbar.ejs") %>

<div class="container mt-5">
    <div class="row">
        <!-- User Info Section -->
        <div class="col-md-4">
            <div class="card p-3">
                <div class="text-center">
                    <img src="<%= user.profileImage || '/images/default-profile.png' %>" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="width:150px; height:150px;">
                    <button class="btn btn-sm btn-primary mb-3">Edit</button>
                </div>
                <form>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" id="username" class="form-control" value="<%= user.username %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" class="form-control" value="<%= user.email %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="otherInfo" class="form-label">Other Info</label>
                        <textarea id="otherInfo" class="form-control" rows="3" readonly><%= user.otherInfo || '' %></textarea>
                    </div>
                </form>
            </div>
        </div>

        <!-- Navigation Section -->
        <div class="col-md-8">
            <div class="card p-3">
                <h4>Navigation</h4>
                <div class="d-grid gap-3 mt-3">
                    <a href="/my-listings" class="btn btn-outline-success btn-lg">My Listings</a>
                    <a href="/my-purchases" class="btn btn-outline-primary btn-lg">My Purchases</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../includes/footer.ejs") %>
