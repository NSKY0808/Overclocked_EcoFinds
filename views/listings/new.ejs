<!-- views/listings/new.ejs -->
<%- include('../includes/navbar') %>

<div style="max-width: 600px; margin: 20px auto; font-family: Arial, sans-serif;">
    <!-- Back Button -->
    <a href="/products" style="text-decoration: none; margin-bottom: 10px; display: inline-block;">← Back</a>

    <!-- Screen Title -->
    <h1>Add New Product</h1>

    <!-- Add Product Form -->
    <form action="/products/new" method="POST" style="display: flex; flex-direction: column; gap: 10px;" enctype="multipart/form-data">
        <!-- Product Title -->
        <label for="title">Product Title:</label>
        <input type="text" id="title" name="title" required>

        <!-- Category Dropdown -->
        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <option value="">-- Select Category --</option>
            <option value="Electronics">Electronics</option>
            <option value="Clothing">Clothing</option>
            <option value="Home Appliances">Home Appliances</option>
            <option value="Books">Books</option>
            <option value="Others">Others</option>
        </select>

        <!-- Description -->
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" placeholder="Enter product description"></textarea>

        <!-- Price -->
        <label for="price">Price (₹):</label>
        <input type="number" id="price" name="price" min="0" step="0.01" required>

        <!-- Add Image Button (Placeholder) -->
        <label for="images_url">Product Image URL:</label>
        <input type="text" id="images_url" name="images_url" placeholder="Enter image URL">
        <button type="button" onclick="alert('Image upload functionality not implemented yet')">+ Add Image (Placeholder)</button>

        <!-- Submit -->
        <button type="submit" style="margin-top: 15px; padding: 10px; background-color: #8000ff9c; color: white; border: none; cursor: pointer;">
            Submit Listing
        </button>
    </form>
</div>

<%- include('../includes/footer') %>
